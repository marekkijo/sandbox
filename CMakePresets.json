    },
    {
      "configuration": "Release",
      "configurePreset": "xcode",
      "name": "xcode"
    },
    {
      "configuration": "Debug",
      "configurePreset": "xcode",
      "name": "xcode_debug"
    },
    {
      "configurePreset": "emscripten_native",
      "name": "emscripten_native"
    },
    {
      "configurePreset": "emscripten",
      "name": "emscripten"
    },
    {
      "configurePreset": "emscripten_no_exceptions",
      "name": "emscripten_no_exceptions"
    },
    {
      "configurePreset": "emscripten_no_pthreads",
      "name": "emscripten_no_pthreads"
    }
  ],
  "version": 8
}
