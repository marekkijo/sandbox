{
  "buildPresets": [
    {
      "configurePreset": "ninja",
      "name": "ninja"
    },
    {
      "configurePreset": "ninja_debug",
      "name": "ninja_debug"
    },
    {
      "configurePreset": "vs2022",
      "name": "vs2022"
    },
    {
      "configurePreset": "default",
      "name": "default"
    },
    {
      "configurePreset": "xcode",
      "name": "xcode"
    },
    {
      "configurePreset": "emscripten",
      "name": "emscripten"
    }
  ],
  "configurePresets": [
    {
      "binaryDir": "${sourceDir}/build/ninja",
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      },
      "description": "Default build using Ninja generator",
      "displayName": "Default Config",
      "generator": "Ninja",
      "name": "ninja"
    },
    {
      "binaryDir": "${sourceDir}/build/ninja_debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      },
      "description": "Debug build using Ninja generator",
      "displayName": "Debug Config",
      "generator": "Ninja",
      "name": "ninja_debug"
    },
    {
      "binaryDir": "${sourceDir}/build/vs2022",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      },
      "description": "Build using Visual Studio 17 2022 generator",
      "displayName": "Visual Studio 17 2022 Config",
      "generator": "Visual Studio 17 2022",
      "name": "vs2022"
    },
    {
      "binaryDir": "${sourceDir}/build/xcode",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      },
      "description": "Build using Xcode generator",
      "displayName": "Xcode Config",
      "generator": "Xcode",
      "name": "xcode"
    },
    {
      "binaryDir": "${sourceDir}/build/emscripten",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "EMSCRIPTEN": true,
        "EMSCRIPTEN_COMPILE_OPTIONS": "-pthread",
        "EMSCRIPTEN_LINK_OPTIONS": "-O3;-pthread;-sMAX_WEBGL_VERSION=2",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "VCPKG_MANIFEST_DIR": "wasm32-emscripten",
        "VCPKG_OVERLAY_TRIPLETS": "wasm32-emscripten",
        "VCPKG_TARGET_TRIPLET": "wasm32-emscripten-pthread"
      },
      "description": "Build using Emscripten",
      "displayName": "Emscripten Config",
      "generator": "Ninja",
      "name": "emscripten"
    },
    {
      "inherits": "ninja",
      "name": "default"
    }
  ],
  "version": 2
}
